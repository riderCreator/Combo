<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#d5d5d5" />

            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="3px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <padding
                android:bottom="3px"
                android:left="1px"
                android:right="1px"
                android:top="0px">


            </padding>


            <corners android:radius="3dp" />
        </shape>
    </item>

</layer-list>